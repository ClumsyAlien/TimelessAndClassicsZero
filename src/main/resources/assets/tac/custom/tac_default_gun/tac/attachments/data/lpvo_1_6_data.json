{
  // 配件重量，单位 kg。影响持枪者的移速
  "weight": 1.0,
  // 对瞄准时间的影响，加数，单位为秒，可为负数
  "ads_addend": 0.03,
  // 对枪械后坐力的影响。
  "recoil_modifier": {
    // 竖直方向偏转削减的大小，范围0~1
    "pitch": 0.1,
    // 水平方向偏转削减程度的大小，范围0~1
    "yaw": 0.05
  },
  // 只有 消音器 配件需要设置这个属性，表示枪声范围削减的大小。
  "silence": 0.6,
  // 只有 瞄具 配件需要设置这个属性，表示瞄具的放大倍率。
  // 玩家可以在数组设置的几个倍率之间切换
  "zoom": [3.0, 6.0],
  // 只有 瞄具 配件需要设置这个属性，表示开镜后，枪身和瞄具渲染的fov。
  // 默认情况下，mc 渲染手部模型的 fov 为 70。
  "fov": 70.0
}